@model SportNotes.Models.EditNoteModel

@{
    ViewBag.Title = "Edit Note";
}

<div class="container">
    <div class="well">
        <h2>Edit Note</h2>
        @using (Html.BeginForm("Edit", "Note", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            @Html.HiddenFor(m => m.Id)
            
            <div class="form-group">
               <div>
                   <p class="text-center lead">
                       Training session at date: @Model.Date.ToString() @Model.Date.DayOfWeek
                   </p>                   
               </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = "15" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Comment, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Comment, new { @class = "form-control", @rows = "3" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Details", "Note", new { id = Model.Id}, new { @class = "btn btn-primary" })
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>