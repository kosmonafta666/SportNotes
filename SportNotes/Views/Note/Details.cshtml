@model SportNotes.Models.Note

<div class="container form-horizontal">
    <div class="form-group">
        <h3 class="text-center lead">Trainning session at: @Model.Date.ToString() @Model.Date.DayOfWeek</h3>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = 15, @readonly = "true"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Comment, new { @class = "control-label col-sm-4" })
        <div class="col-sm-4">
            @Html.TextAreaFor(m => m.Comment, new { @class = "form-control", @rows = "3", @readonly = "true"})
        </div>
    </div>
</div>

<div style="text-align:center">
    @Html.ActionLink("EDIT", "Edit", "Note", new { @id = Model.Id }, new { @class= "btn btn-success" })
    @Html.ActionLink("<< BACK", "UserNotes", "Note", null, new { @class="btn btn-primary"})

    <hr/>

    @using (Html.BeginForm("Delete", "Note", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.HiddenFor(x => x.Id)
        <input type="submit" value="DELETE" class="btn btn-danger" />
    }
</div>
