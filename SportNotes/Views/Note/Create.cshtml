@model SportNotes.Models.CreateNoteModel

@{
    ViewBag.Title = "Create Note";
}

<div class="container">
    <div class="well">
        <h2>Create Note</h2>
        @using (Html.BeginForm("Create", "Note", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = "15"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Comment, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Comment, new { @class = "form-control", @rows = "3" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-primary" })
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>
